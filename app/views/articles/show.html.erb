<h2 align="center">Title: <%= @article.title %></h2>
<% if @article.status? %>
  <div class="center completed">
    <div align="center">
      <h3 align="center">Status: Completed</h3>
    </div>
  </div>
<% else %>
  <div class="center ongoing">
    <div align="center">
      <h3 align="center">Status: Ongoing</h3>
    </div>
  </div>
<% end %>
<br>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li><br>
          <li class="article-title">
            <%= link_to @article.user.username, user_path(@article.user) %>
          </li>
          <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span></li>
        </div>
      </div>
    </ul>
  <% end %>
  <hr>
  <h4 class="center description"><strong>Description: </strong></h4><br>
  <div align="center">
    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
  </div>
  <br>
  <div align="center">
    <%= simple_format(@article.description) %>
  </div>
  <% if @article.categories.any? %>
    <p>Categories: <%= render @article.categories %></p>
  <% end %>
  <div class="article-actions">
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
      <br><%= link_to "Update this task", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this task", article_path(@article), method: :delete, data: {confirm:
       "Are you sure you want to delete the task?"}, class: "btn btn-xs btn-danger" %>
      <% if @article.status? %>
        <%= link_to "Mark as Ongoing", changestatus_article_path(@article.id) , class: "btn btn-xs btn-warning" %>
      <% else %>
        <%= link_to "Mark as Completed", changestatus_article_path(@article.id) , class: "btn btn-xs btn-success" %>
      <% end %>
      <%= link_to "Back to To-do List", user_path(current_user), class: "btn btn-xs btn-info" %>
    <% end %>
  </div>
</div>


