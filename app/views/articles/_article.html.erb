<% obj.each do |t| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to t.title, article_path(t) %>
        </div>
        <div class="article-body">
          <%= truncate(t.description, length: 100) %>
          <div class="article-meta-details">
            <small>Created by: <%= t.user.username if t.user %>,
              <%= time_ago_in_words(t.created_at) %> ago,
              last updated: <%= time_ago_in_words(t.updated_at) %> ago</small>
          </div>
        </div>
        <% if logged_in? && current_user == t.user %>
          <div class="article-actions"><br>
            <%= link_to "Edit this event", edit_article_path(t), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this event", article_path(t), method: :delete, data: {confirm:
              "Are you sure you want to delete the event?"}, class: "btn btn-xs btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>