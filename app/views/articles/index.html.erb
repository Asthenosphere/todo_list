<h1 align="center">All Tasks</h1><br>

<div align="center">
  <%= will_paginate %>
  <% @articles.each do |article| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">

          <li class="article-title">
            <%= link_to "#{article.title}", article_path(article) %>
          </li>
          <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><br>
          <div>
            <div class="article-meta-details">
              <small>Create by: <%= article.user.username if !article.user.nil? %><br>
                Created at: <%= time_ago_in_words(article.created_at) %> ago <br>
                Last updated: <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
            </li>
          </div>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>