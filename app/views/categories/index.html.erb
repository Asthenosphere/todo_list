<h1 align="center">All Categories</h1><br>

<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{category.name}", category_path(category) %>
          </li>
          <span class="glyphicon glyphicon-tag" aria-hidden="true"></span><br>
          <div>
            <div class="article-meta-details">
            <small>Create by: <%= category.user.username if !category.user.nil? %><br>
              Created at: <%= time_ago_in_words(category.created_at) %> ago <br>
              Last updated: <%= time_ago_in_words(category.updated_at) %> ago</small>
            </div>
          </li>
        </div>
      </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>